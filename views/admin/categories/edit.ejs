<div class="container">
    <div class="card">
        <div class="card-body">
            <form action="/admin/categories/updade" method="POST" class="categoriesform ">
                <label for="inputNewCat">
                    <h2>Edit category</h2>
                </label>
                <input autofocus required id="inputNewCat" class="form-control" type="text" name="title"  value="<%= category.title %>">
